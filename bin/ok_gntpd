#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)

require "optparse"
require "ok_gntpd"

# This code is originated from:
# http://d.hatena.ne.jp/snaka72/20090614/1244986772

options = {}
OptionParser.new do |op|
  op.on("-p", "--port PORT") { |v| options[:port] = v.to_i }
  op.parse!
end

OkGntpd.start(options)
